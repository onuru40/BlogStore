@model BlogStore.EntityLayer.Entities.Article

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('@Model.ImageUrl'); background-size: cover; background-position: top;">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="post-entry text-center text-white py-5">
                    <h1 class="mb-4 fw-bold">@Model.Title</h1>
                    <div class="post-meta d-flex flex-column align-items-center gap-2">
                        <figure class="author-figure mb-1">
                            <img src="@ViewBag.appuserImage " alt="Yazar" class="img-fluid rounded-circle shadow" width="80" height="80">
                        </figure>
                        <div class="text-center">
                            <span class="d-block">Yazar: <strong>@ViewBag.appuser</strong></span>
                            <span class="d-block text-white-50">@Model.CreatedDate.ToString("dd-MM-yyyy")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
