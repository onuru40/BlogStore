@model List<BlogStore.EntityLayer.Entities.Article>

<div class="section search-result-wrap">
    <div class="container">

        <div class="row posts-entry">
            <div class="col-lg-12">
                @foreach (var item in Model)
                {
                    <div class="blog-entry d-flex blog-entry-search-item">
                        <a href="single.html" class="img-link me-4">
                            <img src="@item.ImageUrl" alt="Image" class="img-fluid">
                        </a>
                        <div>
                            <span class="date">Apr. 14th, 2022 &bullet; <a href="#">Kategori Adı</a></span>
                            <h2><a href="single.html">@item.Title</a></h2>
                            <p>@item.Description.Substring(0, 100)</p>
                            <p><a href="single.html" class="btn btn-sm btn-outline-primary">Devamını Oku</a></p>
                        </div>
                    </div>

                }

            </div>


        </div>
    </div>
</div>
