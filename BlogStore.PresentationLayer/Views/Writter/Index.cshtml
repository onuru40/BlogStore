@model List<BlogStore.EntityLayer.Entities.AppUser>
@{
    Layout = null;
}
@await Component.InvokeAsync("_HeadLayoutComponentPartial")
@await Component.InvokeAsync("_NavbarLayoutComponentPartial")

<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold display-6">Yazarlarımız</h2>
            <p class="text-muted">Blog sayfamızın yazarları</p>
        </div>

        <div class="row g-4 justify-content-center">
            @if (Model != null && Model.Any())
            {
                @foreach (var author in Model)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="card border-0 shadow-sm h-100 rounded-4 hover-shadow transition">
                            <img src="@(string.IsNullOrEmpty(author.ImageUrl) ? "/images/default-user.png" : author.ImageUrl)"
                                 class="card-img-top rounded-top-4"
                                 alt="Yazar Fotoğrafı"
                                 style="height: 280px; object-fit: cover;">

                            <div class="card-body text-center">
                                <h5 class="card-title mb-1 fw-semibold">
                                    <a href="/Author/Detail/@author.Id" class="text-dark text-decoration-none">
                                        @author.Name @author.Surname
                                    </a>
                                </h5>
                                <p class="text-muted small">Yazar Profili</p>
                            </div>

                            <div class="card-footer bg-white border-0 text-center pb-3">
                                <a href="/Author/Detail/@author.Id" class="btn btn-outline-primary btn-sm px-4 rounded-pill">
                                    Profili Gör
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p class="text-muted">Henüz yazar bulunmamaktadır.</p>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
    }

    .transition {
        transition: all 0.3s ease-in-out;
    }
</style>
