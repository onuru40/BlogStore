@{
    ViewData["Title"] = "GetProfile";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0 rounded-4 p-4 text-center">
                <div class="d-flex justify-content-center">
                    <img src="@(string.IsNullOrEmpty(ViewBag.ImageUrl) ? "/images/default-user.png" : ViewBag.ImageUrl)"
                         alt="Profil Fotoğrafı"
                         class="rounded-circle shadow"
                         style="width: 150px; height: 150px; object-fit: cover;">
                </div>

                <h2 class="mt-3">@ViewBag.Name @ViewBag.Surname</h2>
                <p class="text-muted">@ViewBag.Email</p>

                <hr class="my-4" />

                <h5 class="text-secondary">Hakkımda</h5>
                <p class="mt-2">@ViewBag.Description</p>

                <div class="mt-4">
                    <a href="/Author/UpdateProfile" class="btn btn-primary px-4 py-2 rounded-pill shadow-sm">
                        Bilgilerimi Güncelle
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

